# Document Assistant Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for GPT models via Vocareum)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Base URL (for Vocareum endpoint)
# Default: https://openai.vocareum.com/v1
OPENAI_BASE_URL=https://openai.vocareum.com/v1

# Optional: Model Configuration
# Uncomment and modify if you want to set default models
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0
